{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-plusplus": "off",
    "no-bitwise": "off",
    "class-methods-use-this": "off",
    "camelcase": "off",
    "no-param-reassign": "warn",
    "max-len": [
      2,
      100,
      2,
      {
        "ignoreUrls": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "linebreak-style": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ]
  }
}
